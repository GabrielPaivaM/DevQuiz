<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/blueDeep"
    tools:context=".view.MainActivity">

    <VideoView
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/cloudoff_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="14dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="VOCÃŠ ESTA OFFLINE"
        android:textColor="@color/white"
        android:fontFamily="@font/nunitoblack"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/cloudoff_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="6dp"
        android:layout_marginRight="4dp"
        app:layout_constraintEnd_toStartOf="@id/cloudoff_textview"
        android:src="@drawable/cloudofficon"
        android:visibility="invisible"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/play_button"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:backgroundTint="@color/yellow"
        android:layout_marginTop="520dp"
        android:layout_marginHorizontal="60dp"
        android:fontFamily="@font/nunitoblack"
        android:text="JOGAR"
        android:textColor="@color/blackText"
        android:textSize="30dp"
        app:cornerRadius="10dp"
        app:strokeWidth="2dp"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>